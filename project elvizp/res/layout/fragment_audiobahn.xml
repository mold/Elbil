<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<LinearLayout
	    android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	
	    <Button
	        android:id="@+id/start_game"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/start_game" />
	    <Button
	        android:id="@+id/toggle_sound"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/start_sound" />

	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="10sp"
		    android:orientation="vertical"
		    android:background="@color/light_pink" >
	    
	        <TextView
	            android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:textColor="@color/black"
		    	android:textSize="20sp"
		    	android:text="@string/fine_driver_title" />
	        
	        <TextView
	            android:id="@+id/mode_text"
	            android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/consumption_text"
	            android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/debug_text"
	            android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/scoring_text"
	            android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/level_text"
	            android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textSize="30sp"
		    	android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/points_text"
	            android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textSize="30sp"
		    	android:textColor="@color/black" />
	        
        </LinearLayout>
	    
	    <TextView
	        android:id="@+id/seekBar1Text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    <SeekBar
	        android:id="@+id/seekBar1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:max="1000" />

	    <TextView
	        android:id="@+id/seekBar2Text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	    <SeekBar
	        android:id="@+id/seekBar2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:paddingBottom="20dp"
	        android:max="1000" />
	    
	    <Button
	        android:id="@+id/reload_folder"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/reload_folder" />
	    <LinearLayout
	      	android:id="@+id/patch_list"
	       	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical" >

	    </LinearLayout>
		    
	</LinearLayout>
</ScrollView>
